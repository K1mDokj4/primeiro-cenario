<page id="dokkaebi" bg_image="metroballontext_800x600_2_.png">
  <agent
      id="narrativa"
      text="clique aqui para avançar"
      color="darkgray"
      x="615" 
      y="546"
      font-size="15"
      on_click="set(mensagem_dokkaebi, $mensagem_dokkaebi+1)"
      animation="hover-grow"
    />
  <fab-if when="$mensagem_dokkaebi = 0">
      <agent
        id="tws"
        text='"Quando ele apareceu, alguém murmurou: "É um Diabrete."'
        x="0" 
        y="475" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 1">
      <agent
        id="Kim1"
        text="『Não sei o porquê, mas de repente me lembrei dessa frase』"
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 2">
      <agent
        id="Kim2"
        text="『O metrô parou do nada, as luzes do vagão se apagaram』"
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 3">
      <agent
        id="tws"
        text='"É... sem chance, não é tão incomum um metrô parar do nada."'
        x="0" 
        y="475" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 4">
      <agent
        id="Kim3"
        text="『Só consegui pensar no início de uma novel bem familiar』"
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 5">
      <agent
        id="Kim4"
        text="『Mas isso é rídiculo... não tem como ser possível』"
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 6">
      <agent
        id="Yoo1"
        text="Um Diabrete...?"
        x="0" 
        y="475" 
        color="orange"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 7">
      <agent
        id="Kim5"
        text="『Isso não é possível de nenhuma forma lógica. É ridículo, mas...』"
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 8">
      <agent
        id="tws2"
        text='"Um par de pequenos chifres"'
        x="0" 
        y="475" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 9">
      <agent
        id="tws2"
        text='"Envolta em uma porção de feno, a estranha e peluda criatura estava flutuando no ar"'
        x="0" 
        y="475" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 10">
      <agent
        id="tws2"
        text='"Ela era grotesca demais para ser uma Fada, muito nefasta para um Anjo e muito inofenciva para ser o Diabo"'
        x="0" 
        y="475" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 11">
      <agent
        id="Kim6"
        text="Sem chances... Está brincando comigo. Isso é... "
        x="0" 
        y="475" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 12">
      <agent
        id="narrador1"
        text="Na sua frente aparece uma criatura que segue a exata definição presente na novel que você acabou de finalizar "
        x="0" 
        y="475" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  <fab-if when="$mensagem_dokkaebi >= 0">
    <agent 
         id="imagem1" 
         x="center" 
         y="10" 
         image="dokkaebi.png" 
         animation="bounce-loop"
        /> 
  </fab-if>
  
</page>