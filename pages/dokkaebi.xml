<page id="dokkaebi" bg_image="metroballontext_800x600_2_.png">
  <agent
      id="narrativa"
      text="clique aqui para avançar"
      color="darkgray"
      x="615" 
      y="546"
      font-size="15"
      on_click="set(mensagem_dokkaebi, $mensagem_dokkaebi+1)"
      animation="hover-grow"
    />
  <fab-if when="$mensagem_dokkaebi = 0">
      <agent
        id="tws"
        text='"Quando ele apareceu, alguém murmurou: "É um Diabrete."'
        x="0" 
        y="445" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 1">
      <agent
        id="Kim1"
        text="『Não sei o porquê, mas de repente me lembrei dessa frase』"
        x="0" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 2">
      <agent
        id="Kim2"
        text="『O metrô parou do nada, as luzes do vagão se apagaram』"
        x="0" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 3">
      <agent
        id="tws"
        text='"É... sem chance, não é tão incomum um metrô parar do nada."'
        x="0" 
        y="445" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_dokkaebi = 2">
      <agent
        id="Kim2"
        text="『O metrô parou do nada, as luzes do vagão se apagaram』"
        x="0" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
</page>