<page id="colega" bg_image="metroballontext_800x600_2_.png">
  
  <agent
    id="narrativa"
    text="clique aqui para avançar"
    color="darkgray"
    x="615" 
    y="546"
    font-size="15"
    on_click="set(mensagem_colega, $mensagem_colega+1)"
    animation="hover-grow"
  />
   
  <fab-if when="$mensagem_colega = 0">
      <agent
        id="narrador2"
        text="Você tomou uma decisão estranha... normalemnte não era uma decisão que você faria"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

     <fab-if when="$mensagem_colega = 1">
      <agent
        id="narrador3"
        text=" 『Você aproveitou esse momento para olhar os redores enquanto ficava com o celular na mão』"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

       <fab-if when="$mensagem_colega = 2">
      <agent
        id="narrador4"
        text=" 『Na sua frente tinha um grupo de adolescente conversando alto sobre alguma coisa que você não conhece』"
        x="0" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

    <fab-if when="$mensagem_colega = 3">
      <agent
        id="narrador5"
        text=" 『Ao lado deles tem uma mãe e seu filho, ele tem uma caixa de guardar insetos e uma rede, seus joelhos parecem sujos de terra』"
        x="0" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

      <fab-if when="$mensagem_colega = 4">
      <agent
        id="narrador6"
        text=" 『Do lado oposto você reconhece o gerente do seu setor, você se pergunta o que levou a pessoa que tanto se orgulhava do seu carro se luxo recém comprado a andar de transporte público』"
        x="0" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

      <fab-if when="$mensagem_colega = 5">
      <agent
        id="narrador7"
        text="É raro ver seu rosto sem ser tampado pelo seu celular"
        x="0" 
        y="454" 
        color="orange"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

      <fab-if when="$mensagem_colega = 6">
      <agent
        id="narrador8"
        text=""
        x="0" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  </page>