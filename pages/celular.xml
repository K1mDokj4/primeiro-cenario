<page id="celular" bg_image="metroballontext_800x600_2_.png"> 
  
  <agent
    id="narrativa"
    text="clique aqui para avançar"
    color="darkgray"
    x="615" 
    y="546"
    font-size="15"
    on_click="set(mensagem_celular, $mensagem_celular+1)"
    animation="hover-grow"
  />

  <fab-if when="$mensagem_celular = 1">
      <agent
        id="narrador2"
        text="No fim você tomou a decisão de sempre, se esconder atrás da tela do seu celular"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  
</page>