<page id="middle" bg_image="metroballontext_800x600_2_.png">

    <agent
      id="narrativa"
      text="clique aqui para avançar"
      color="darkgray"
      x="615" 
      y="546"
      font-size="15"
      on_click="set(mensagem, $mensagem+1)"
      animation="hover-grow"
    />
    <fab-if when="$mensagem = 0">
      <agent
        id="tws"
        text='"Existem três maneiras de sobreviver em um mundo destruído. Atualmente eu esqueci algumas delas, mas uma coisa é certa: O fato de que você está lendo isso significa que irá sobreviver -FIM"'
        x="0" 
        y="445" 
        color="darkgoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  
  <fab-if when="$mensagem = 1">
      <agent
        id="kim1"
        text="Hã...? Sério? É só isso?"
        x="10" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
    
  <fab-if when="$mensagem = 2">
      <agent
        id="narrador2"
        text="No metrô voltando do trabalho você se sente como sempre: uma pessoa solitária aproveitando de seu hobbie, ler webnovels de fantasia"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  
    <fab-if when="$mensagem = 3">
      <agent
        id="kim3"
        text=" Você é só mais um nesse vasto oceano que é o mundo, você já parecia acostumado com isso, mas ainda sim, não deixava de ser um fardo"
        x="10" 
        y="450" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

    <fab-if when="$mensagem = 4">
      <agent
        id="kim4"
        text="『Hoje foi o dia em que a novel de fantasia que eu leio há mais de 10 anos acabou』"
        x="10" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

      <fab-if when="$mensagem = 5">
        <agent 
         id="imagem1" 
         x="0" 
         y="0" 
         image="metro2.png" 
         animation="fade-in"
         /> 
       <agent
        id="pergunta"
        text="Tem algo que você queira fazer?"
        color="gold"
        x="center"
        y="300"
        font-size="25"
        animation="fade-in"
        />
         <agent
          id="trigger_colega"
          text="Olhar para os passageiros"
          y="390"
          x="90"
          animation="hover-grow"
          on_click="goToPage('colega')"
          font-size="20"
          />
        <agent
          id="trigger_celular"
          text="Olhar para o seu celular"
          y="390"
          x="475"
          animation="hover-grow"
          on_click="goToPage('celular')"
          font-size="20"
        />
    </fab-if>
  <!-- Colocar isso dentro de um IF -->

</page>