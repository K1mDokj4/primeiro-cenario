<page id="middle" bg_image="metroballontext_800x600_2_.png">

    <agent
      id="narrativa"
      text="clique aqui para avançar"
      color="gold"
      x="615" 
      y="546"
      font-size="15"
      on_click="set(mensagem, $mensagem+1)"
      animation="hover-grow"
    />
    <fab-if when="$mensagem = 0">
      <agent
        id="narrador"
        text='"Existem três maneiras de sobreviver em um mundo destruído. Atualmente eu esqueci algumas delas, mas uma coisa é certa: O fato de que você está lendo isso significa que irá sobreviver"'
        x="0" 
        y="445" 
        color="palegoldenrod"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  
  <fab-if when="$mensagem = 1">
      <agent
        id="kim1"
        text="Hã...? Sério? É só isso?"
        x="10" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
    
  <fab-if when="$mensagem = 2">
      <agent
        id="kim2"
        text="『Meu hobbie é ler novels no caminho de volta para casa』"
        x="10" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  
    <fab-if when="$mensagem = 3">
      <agent
        id="kim3"
        text="『Mas, hoje na volta foi um pouco diferente do habitual...』"
        x="10" 
        y="445" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

      <fab-if when="$mensagem = 4">
      <agent
        id="Yoo1"
        text="Você vai ser sugado pelo seu celular desse jeito"
        x="10" 
        y="445" 
        color="#ce9a74"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>
  <!-- Colocar isso dentro de um IF -->

</page>