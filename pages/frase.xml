<page id="frase" bg_image="metroballontext_800x600_2_.png">
  <agent
    id="narrativa"
    text="clique aqui para avançar"
    color="darkgray"
    x="615" 
    y="546"
    font-size="15"
    on_click="set(mensagem_frase, $mensagem_frase+1)"
    animation="hover-grow"
  />

  <fab-if when="$mensagem_frase = 0">
      <agent
        id="narrador1"
        text="Você respira fundo, estranhamente você estava muito calmo, muito mais calmo do que você jamais seria em uma situação assim"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 1">
      <agent
        id="narrador2"
        text="Você olha para sua e percebe que Yoo Sangah está segurando seu braço com medo enquanto rói suas unhas e tenta ligar para a polícia"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 2">
      <agent
        id="Yoo1"
        text="A polícia não está atendendo! O que vamos fazer..."
        x="10" 
        y="454" 
        color="darkorange"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 3">
      <agent
        id="Kim1"
        text="Yoo, você se lembra daquele jogo feito pelo time de desenvolvimento, certo? Pense assim, você está nele agora"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 4">
      <agent
        id="Yoo2"
        text="Jogo...? O que você está..."
        x="10" 
        y="454" 
        color="darkorange"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 5">
      <agent
        id="Kim2"
        text="É simples, todos jogos tem regras. Só precisamos descobrir quais são"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 6">
      <agent
        id="Kim3"
        text="『Pense... O que eu preciso fazer para sobreviver nesse  mundo』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 7">
      <agent
        id="Kim4"
        text='『As coisas definitivamente estão se desenrolando igual à novel, mas como "Ele" não apareceu ainda? 』'
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 8">
      <agent
        id="narrador3"
        text='Como as pessoas ainda pareciam imóveis pela situação anômala. O Diabrete apareceu mais uma vez para fazer com que o "show continuasse"'
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 9">
        <agent
          id="Dokkaebi2"
          text="『Como vocês estão lerdando muito para começar logo o que eu mandei, vou mostrar o que acontecerá com vocês』"
          x="0" 
          y="454" 
          color="crimson"
          font-size="24"
          animation="pulse click-shake glow"
          />
      </fab-if>

  <fab-if when="$mensagem_frase = 10">
      <agent
        id="narrador4"
        text='Em meio aos sorrisos maléficos do Diabrete, surgiram telas no ar, mostrando o que estava acontecendo em outros lugares'
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 11">
      <agent
        id="narrador5"
        text='O primeiro deles foi uma escola, após os trinta minutos um som de alarme começou a tocar, e vários alunos foram mortos aleatóriamente até que começassem a se matar'
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="glitch"
      />
    </fab-if>

  <fab-if when="$mensagem_frase = 12">
      <agent
        id="narrador6"
        text='Era possível ouvir tudo, os gritos, os choros, até mesmo o som da pele dos alunos contra o chão foi ouvido até que você ouviu um "crack"'
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="glitch"
      />
    </fab-if>
  <fab-if when="$mensagem_frase = 12">
      <agent
        id="narrador7"
        text='Era possível ouvir tudo, os gritos, os choros, até mesmo o som da pele dos alunos contra o chão foi ouvido até que você ouviu um "crack"'
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="glitch"
      />
    </fab-if>
</page>