<page id="lerdo" bg_image="metroballontextconfronto.png">
  <agent
      id="narrativa"
      text="clique aqui para avançar"
      color="darkgray"
      x="615" 
      y="546"
      font-size="15"
      on_click="set(mensagem_lerdo, $mensagem_lerdo+1)"
      animation="hover-grow"
  />
  <fab-if when="$mensagem_lerdo = 0">
        <agent
          id="narrador1"
          text="Você correu procurando algo, qualquer coisa que não fosse vivo, você corria desesperado procurando qualquer coisa que fosse viva e não humana nesse caos"
          x="10" 
          y="454" 
          color="dimgray"
          font-size="24"
          animation="fade-in-up"
        />
      </fab-if>

  <fab-if when="$mensagem_lerdo = 1">
        <agent
          id="narrador2"
          text="De vez em quando algumas pessoas tentavam chegar até você para te atacar mas você continuava correndo e olhando para o chão atrás de algum inseto"
          x="10" 
          y="454" 
          color="dimgray"
          font-size="24"
          animation="fade-in-up"
        />
      </fab-if>

  <fab-if when="$mensagem_lerdo = 2">
        <agent
          id="narrador3"
          text="Até que seus olhos se encontram com um garoto imóvel, com o rosto sujo de sangue com os olhares penetrantes e curiosos em relação à um corpo decapitado"
          x="10" 
          y="454" 
          color="dimgray"
          font-size="24"
          animation="fade-in-up"
        />
      </fab-if>

  <fab-if when="$mensagem_lerdo = 3">
        <agent
          id="narrador4"
          text="Ele tinha uma caixa de insetos e uma rede"
          x="10" 
          y="454" 
          color="dimgray"
          font-size="24"
          animation="fade-in-up"
        />
      </fab-if>

  <fab-if when="$mensagem_lerdo = 4">
      <agent
        id="narrador5"
        text="Você se abaixou e ficou na linha de visão dele, o que fez com que ele focasse em você"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 5">
      <agent
        id="narrador6"
        text="Infelizmente seus planos foram jogados no lixo, dentro da caixa só havia dois insetos, o terceiro que você viu de longe já estava morto dentro da caixa"
        x="10" 
        y="454" 
        color="dimgray"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 6">
      <agent
        id="Kim1"
        text="『Merda... eu olhei no fundo dos olhos do garoto』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 7">
      <agent
        id="Gil1"
        text="T-Tio eu quero viver, por favor... 『O garoto segurou o meu braço e entregou a caixa』"
        x="10" 
        y="454" 
        color="lawngreen"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 8">
      <agent
        id="Kim2"
        text="『O garoto não parecia entender o que eu queria, mas eu comecei a suar frio. Eu acabei fazendo a mesma coisa...』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 9">
      <agent
        id="Kim3"
        text="『Independente de quem eu escolher salvar... eu não vou ser melhor do que aqueles que pisoteram a senhora』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 10">
      <agent
        id="constelacao1"
        text="『Algumas constelações riem do seu desespero』"
        x="10" 
        y="454" 
        color="white"
        font-size="24"
        animation="fade-in glow"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 11">
      <agent
        id="Kim4"
        text="『Como eu li a novel já sabia como as constelações eram. Eram seres que estavam aqui somente pelo circo da desgraça』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 12">
      <agent
        id="Kim5"
        text="『Elas não se importam com nada além dessa tragédia, elas só querem mais sangue... mais escolhas absurdas...』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 13">
      <agent
        id="Kim6"
        text="『O que eu vou fazer?? Eu sujo as minhas mãos com o sangue da criança que tinha a resposta ou eu quebro minha promessa com Yoo Sangah??』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 14">
      <agent
        id="Kim7"
        text="『Existe também uma terceira opção... mas ela é muito nobre para alguém como eu』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 15">
      <agent
        id="Kim8"
        text="『Eu não sei o que fazer...』"
        x="10" 
        y="454" 
        color="skyblue"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 16">
      <agent
        id="constelacao2"
        text="『As constelações querem que você escolha logo』"
        x="10" 
        y="454" 
        color="white"
        font-size="24"
        animation="fade-in glow"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 17">
      <agent
        id="narrador7"
        text="Instintivamente você olha para cima, você realmente precisa decidir logo"
        x="10" 
        y="454" 
        color="white"
        font-size="24"
        animation="fade-in glow"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo = 18">
      <agent
        id="sistema"
        text="『Você tem 4 minutos para matar algo』"
        x="10" 
        y="454" 
        color="cyan"
        font-size="24"
        animation="fade-in-up"
      />
    </fab-if>

  <fab-if when="$mensagem_lerdo >= 19">
      <agent 
         id="imagem1" 
         x="0" 
         y="0" 
         image="metro2confronto.png" 
         animation="fade-in"
        /> 
        <agent
          id="pergunta1"
          text="Qual vai ser sua escolha? Quem você irá sacrificar?"
          color="gold"
          x="135"
          y="210"
          font-size="25"
          animation="fade-in"
        />

    <agent
          id="pergunta2"
          text="『Algumas constelações olham para você curiosas, elas sussuram algo entre si』"
          color="white"
          x="20"
          y="255"
          font-size="23"
          animation="breathing glow"
        />
      <agent
          id="trigger_cumplices"
          text="O garoto imóvel que confiou em você"
          x="210"
          y="320"
          animation="hover-pulse pulse"
          on_click="set(mensagem_lerdo, 0); goToPage('final-cumplice')"
          font-size="24"
          color="crimson"
        />
    
        <agent
          id="trigger_bigbrother"
          text="Yoo Sangah, que está te esperando onde você a deixou"
          x="120"
          y="390"
          animation="hover-pulse pulse"
          on_click="set(mensagem_lerdo, 0); goToPage('final-bigbrother')"
          font-size="24"
          color="crimson"
        />
        <agent
          id="trigger_martir"
          text="Fazer algo nobre, e se sacrificar por eles dois"
          y="460"
          x="170"
          animation="hover-pulse pulse"
          on_click="set(mensagem_lerdo, 0); goToPage('final-martir')" 
          font-size="24"
          color="crimson"
        />
    </fab-if>
</page>